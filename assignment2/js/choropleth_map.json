{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Video Game Revenue ($) per 10,000 People from 2019 to 2022",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/markiessuah/FIT3179/main/datasets/game_revenue_country_chloro.csv"
  },
  "transform": [
    {
      "lookup": "country",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/markiessuah/FIT3179/main/datasets/ne_50m_admin_0_countries.json",
          "format": {"type": "topojson", "feature": "ne_50m_admin_0_countries"}
        },
        "key": "properties.NAME",
        "fields": ["type", "properties", "geometry", "properties.NAME"]
      }
    },
    {"filter": "datum.year==year"}
  ],
  "params": [
    {
      "name": "year",
      "value": 2022,
      "bind": {
        "input": "range",
        "min": 2019,
        "max": 2022,
        "step": 1,
        "name": "Select the year:"
      }
    }
  ],
  "layer": [
    {
      "mark": {"type": "geoshape"},
      "encoding": {
        "color": {
          "field": "rev_norm",
          "title": "Revenue (USD)",
          "type": "quantitative",
          "scale": {
            "scheme": "lightorange",
            "domain": [
              0,
              1000,
              3000,
              5000,
              10000,
              30000,
              50000,
              80000,
              100000,
              200000,
              400000,
              600000,
              1000000
            ]
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {
            "field": "rev_norm",
            "type": "quantitative",
            "title": "Revenue (USD)",
            "format": ",.0f"
          }
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/markiessuah/FIT3179/main/datasets/game_revenue_country_chloro.csv"
      },
      "encoding": {
        "longitude": {"field": "long", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"}
      },
      "layer": [
        {
          "mark": {"type": "circle", "color": "lightblue"},
          "encoding": {
            "opacity": {
              "condition": {
                "test": "datum['rank'] < 10 && datum['rank'] > 0",
                "value": 1
              },
              "value": 0
            }
          }
        },
        {
          "mark": {
            "type": "text",
            "dy": -10,
            "fontSize": 10,
            "font": "Helvetica",
            "color": "black"
          },
          "encoding": {
            "text": {"field": "country", "type": "nominal"},
            "opacity": {
              "condition": {
                "test": "datum['rank'] < 10 && datum['rank'] > 0 && datum['country'] != 'Japan'",
                "value": 1
              },
              "value": 0
            }
          }
        },
        {
          "mark": {
            "type": "text",
            "dy": 10,
            "fontSize": 10,
            "font": "Helvetica",
            "color": "black"
          },
          "encoding": {
            "text": {"field": "country", "type": "nominal"},
            "opacity": {
              "condition": {"test": "datum['country'] == 'Japan'", "value": 1},
              "value": 0
            }
          }
        }
      ]
    }
  ],
  "config": {}
}